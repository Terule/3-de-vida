{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@models": ["./models"],
      "@controllers": ["./controllers"],
      "@services": ["./services"],
      "@middlewares": ["./middlewares"],
      "@utils": ["./utils"],
      "@types": ["./types"]
    }
  }
}
